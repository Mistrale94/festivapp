{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <section class="profile">
        <div class="profileHeader">
            {% if user.avatar == null %}
                <img src="/image/uploads/users/avatar.webp" alt="" />
            {% else %}
                <img src="/image/uploads/users/{{user.avatar}}" alt="" />
            {% endif %}
            <h1>{{ user.username }}</h1>
            <p>{{ user.description }}</p>
            {% if user.id == app.user.id %}
                <a href="{{ path('app_user_edit', {'id': app.user.id}) }}">Modifier mon profile</a>
            {% endif %}
        </div>
        <div class="profilePost">
            {% for post in user.post %}
                <a href="{{ path('app_post_show', {'id': post.id}) }}">
                    <img src="/image/uploads/posts/{{ post.image }}" alt="">
                </a>
            {% endfor %}
        </div>
    </section>

    {# {{ include('user/_delete_form.html.twig') }} #}
{% endblock %}
